										option(value='Division') a Division
										option(value='SiteLocation') a SiteLocation
										option(value='Building') a Building
									button.btn.btn-default.btn-block.btn-outline-secondary(id = 'button' type='button') Next
										
				script(src='/create-invite-lists/InviteListCreatorScript.js')
