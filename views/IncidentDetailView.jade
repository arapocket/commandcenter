doctype html
html(lang='en')
	head
		meta(charset='UTF-8')
		title Incident Details
		style.
			html, body {
			}
	link(href="/bootstrap/css/bootstrap.min.css", rel="stylesheet")
	link(href="/stylesheets/chatstyle.css", rel="stylesheet")
	link(rel='stylesheet', href='/font-awesome-4.7.0/css/font-awesome.min.css')
	.row
		.col-md-12.col-sm-12.col-xs-12
			#backButton
					a.btn.btn-default.btn-block
						i.fa.fa-hand-o-left(aria-hidden='true')
						| &nbsp Go Back
	.row						
		.col-md-6.col-sm-6.col-xs-6
			img#incidentPhoto(src="",  width = "100%", height = "100%", display = 'none')
			video#incidentVideo(src="",  width = "100%", height = "100%", display = "none" autoplay = "" loop = "true" )
		.col-md-6.col-sm-6.col-xs-6
			-each incident in getIncidentResult
				table#pickle.table.table-hover.table-striped.table-bordered
					thead
						tr.default
							th=incident.Type
						tr.default
							th=incident.Description
			script(src='/javascripts/convoyer/renderIncidentDetails.js')
			script.
					var incident = !{ JSON.stringify(getIncidentResult) };
					renderIncidentDetails();
									



								


