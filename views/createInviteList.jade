include mixins
doctype
html
	head
		title Command Center 5.0
		script( src='/javascripts/jquery-3.1.1.min.js' )				
		script( src='/bootstrap-new/js/bootstrap.min.js' )
		script(type="text/javascript" src="/moment/moment.js")
		script( src="/footable/js/footable.min.js")
		link(href="/bootstrap/css/bootstrap.min.css", rel="stylesheet")
		link(rel='stylesheet', href='/footable/css/footable.bootstrap.css')
		

		block content   

			include navbar
					
			h3 Create Invite List
			br
			
			div
				table#pickle.table.table-hover.table-striped.table-bordered( data-paging="true" data-filtering = 'true')
					thead
						tr.warning
							th Select
							th Badge Detail
							th Last Name
							th First Name
							th Cardnumber
							th Employee Id
							th Email
							th Title
							th Image File
					tbody
						-each result in results
								tr
									td
											input.form-check-input(type='checkbox' value=result.EmpID id=result.EmpID )
									td
										a(href="/badgeDetail/#{result.iClassNumber}") Badge Detail
									td=result.LastName
									td=result.FirstName
									td=result.iClassNumber
									td=result.EmpID
									td=result.EmailAddr
									td=result.Title
									td=result.imageName
				script(src='/javascripts/createInviteList.js')
				script.
					jQuery(function($){
						$('.table').footable();
					});			
					var results = !{ JSON.stringify(results) };
					loadScripts();
								