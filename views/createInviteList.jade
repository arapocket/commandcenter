include mixins
doctype
html
	head
		title Command Center 5.0
		meta( charset='utf-8' )
		meta( http-equiv='X-UA-Compatible', content='IE=edge' )
		meta( name='viewport', content='width=device-width, initial-scale=1.0' )
		script( src='/javascripts/jquery-3.1.1.min.js' )				
		script( src='/bootstrap/js/bootstrap-4.1.1.min.js' )
		script(type="text/javascript" src="/moment/moment.js")
		script(type="text/javascript" src="/footable/js/footable.min.js")
		link(rel='stylesheet', href='/font-awesome-4.7.0/css/font-awesome.min.css')
		link(rel='stylesheet', href='/stylesheets/dropdowns.css')
		link(rel='stylesheet', href='/perfect-scrollbar/css/perfect-scrollbar.css')
		link(href="/bootstrap/css/bootstrap.min.css", rel="stylesheet")
		link(rel='stylesheet', href='/footable/css/footable.bootstrap.css')
		link(rel='stylesheet', href='/convoyer/styles/styles.css')

		block content   

			include navbar
					
			h3 Create Invite List
			br
			
			div
				table#modal-example-1.table.table-hover.table-striped.table-bordered(data-paging = 'true' data-filtering="true")
					thead
						tr.warning
							th
								#checkallbox
									input.form-check-input(type='checkbox' value ='')
							th
							th Last Name
							th First Name
							th Cardnumber
							th Employee Id
							th Email
							th Title
							th Image File
					tbody
						-each result in results
								tr
									td
										input.form-check-input(type='checkbox' value=result.EmpID id=result.EmpID )
									td
										a(href="/badgeDetail/#{result.iClassNumber}") Badge Detail
									td=result.LastName
									td=result.FirstName
									td=result.iClassNumber
									td=result.EmpID
									td=result.EmailAddr
									td=result.Title
									td=result.imageName

				script(src='/javascripts/createInviteList.js')
				script.
					jQuery(function($){
						$('.table').footable();
					});			
					var results = !{ JSON.stringify(results) };
					loadScripts();
								