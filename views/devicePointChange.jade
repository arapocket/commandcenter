include mixins
extends layout
block content   

            include navbar

            h3 Change device associated with muster point
            p.text-primary Muster point #{pointID}
            r
            h5 Click "Select" to change lists for this event, or "Clear" to remove device
            br
            p.text-primary Current device associated:  #{deviceAuthCode}


          
            div
                table#pickle.table.table-hover.table-striped.table-bordered
                    thead
                        tr  
                            th
                            th AuthCode
                            th Current status
                            th Date issued
                    tbody
                        -each result in results
                            tr
                                    td
                                       a(href="/musterPointAddDevice/#{result.AuthCode}/#{pointID}") Select

                                    td=result.AuthCode
                                    td=result.CurrentStatus
                                    td=result.DateIssued

                script.
                    $(document).ready(function() {
                    $('#pickle').DataTable();
                    });
                script.
                    $(document).ready(function() {
                    $('#pickle tr').click(function() {
                    var href = $(this).find("a").attr("href");
                        if(href) {
                            window.location = href;
                        }
                    });
                    });
            div 
                br
               
                .col-md-4.col-sm-6.col-xs-12
                    form.form-signin(class="form-horizontal", Action="/eventChangeInviteList/0/#{eventID}", method="post")
                        button.btn.btn-primary.btn-lg(type="submit") Clear 

                .col-md-4.col-sm-6.col-xs-12
                    form.form-signin(class="form-horizontal", Action="/eventsUpcoming", method="get")
                        button.btn.btn-warning.btn-lg(type="submit") No changes 
